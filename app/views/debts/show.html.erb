<p id="notice"><%= notice %></p>

<p>
  <b>Value:</b>
  <%= @debt.value %>
</p>

<p>
  <b>Description:</b>
  <%= @debt.description %>
</p>

<p>
  <b>Debitor:</b>
  <%= User.find(@debt.debitor_id).nickname %>
</p>

<p>
  <b>Creditor:</b>
  <%= @debt.creditor_id %>
</p>

<p>
  <b>Cleared:</b>
  <%= @debt.cleared %>
</p>

<p>
  <b>Confirmed:</b>
  <%= @debt.confirmed %>
</p>
<p>
  <b>Bill:</b>
		<%=  if @debt.bill != nil
			if @debt.bill_type == "application/pdf"
				link_to 'Get_File' , url_for(:controller => "debts", :action => "get_file", :id => @debt.id) 
			else
				image_tag( url_for(:controller => "debts", :action => "get_file", :id => @debt.id),:size => "300x200")
			end 
	     	     end
		%>
</p>
